= link_to '新規投稿画面', new_tweet_path, class: 'btn btn-outline-success mb-2'
%ul.nav.nav-tabs#timeline{role: 'tablist'}
  %li.nav-item
    = link_to '全体タイムライン', '#timeline-all', class: 'nav-link active', id: 'all-tab', data: {toggle: 'tab'}, role: 'tab'
  %li.nav-item
    = link_to 'フォローユーザーのタイムライン', '#timeline-follow-users', class: 'nav-link', id: 'follow-users-tab', data: {toggle: 'tab'}, role: 'tab'
.tab-content#timeline-content.pt-3
  .tab-pane.fade.show.active#timeline-all{role: 'tabpanel'}
    = render partial: 'timeline_content', locals: { tweets: @tweets }
  .tab-pane.fade#timeline-follow-users{role: 'tabpanel'}
    = render partial: 'timeline_content', locals: { tweets: @follow_users_tweets }

